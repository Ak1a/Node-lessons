<% include head.ejs %>

<body class="container">
    <% include header.ejs %>
    <img src="https://images.unsplash.com/photo-1546443046-ed1ce6ffd1ab?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80"
        alt="header" height="300" width="100%">
    <form action="/registration" method="POST" class="row justify-content-md-center">
        <div>
            <div class="form-group">
                <label for="firstName"> Type your first name
                    <input class="form-control" id="firstName" name="firstName" type="text">
                </label>
            </div>
            <div class="form-group">
                <label for="lastName"> Type your last name
                    <input class="form-control" type="text" name="lastName" id="lastName">
                </label>
            </div>
            <div class="form-group">
                <label for="email"> Type your email
                    <input class="form-control" type="email" name="email" id="email" required>
                </label>
            </div>
            <div class="form-group">
                <label for="password"> Type your password
                    <input class="form-control" type="password" name="password" id="password">
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</body>
